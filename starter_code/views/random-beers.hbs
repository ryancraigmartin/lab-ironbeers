{{!-- {{> randomBeerPartial this}} --}}


  <div class="">
    <img class="randombeer-image" src="{{randomBeer.image_url}}" alt="BeerImage">
  </div>
<div class="randombeer-text-wrapper"> 
    <div class="randombeer-name">
      <h3>{{randomBeer.name}}</h3>
    </div>
    <div class="randombeer-tagline">
      <h4>{{randomBeer.tagline}}</h4>
    </div>
    <div class="randombeer-description">
      <h6>{{randomBeer.description}}</h6>
    </div>
    <div class="randombeer-food-pairing">
      <span>Food Pairing:</span>
        <ul>
          {{#each randomBeer.food_pairing}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
    </div>
    <div class="randombeer-brewers-tips">
      <span>Brewer's Tips:</span>
      <p>{{randomBeer.brewers_tips}}</p>
    </div>
</div>
